---
interface Props {
  title: string;
  date: Date;
  mood: string;
  excerpt?: string;
  slug: string;
}

const { title, date, mood, excerpt, slug } = Astro.props;

const moodIcons: Record<string, string> = {
  sunny: '‚òÄÔ∏è',
  cloudy: '‚õÖ',
  rainy: 'üåßÔ∏è',
  stormy: '‚õàÔ∏è',
  rainbow: 'üåà',
};

const formattedDate = date.toLocaleDateString('zh-CN', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<a href={`/diary/${slug}`} class="diary-card">
  <div class="card-header">
    <span class="mood-icon">{moodIcons[mood] || 'üåª'}</span>
    <span class="date">{formattedDate}</span>
  </div>
  <h3 class="card-title">{title}</h3>
  {excerpt && <p class="card-excerpt">{excerpt}</p>}
</a>

<style>
  .diary-card {
    display: block;
    background: var(--surface);
    backdrop-filter: blur(22px);
    border-radius: var(--radius-lg);
    border: 1px solid var(--border);
    padding: var(--spacing-lg);
    text-decoration: none;
    color: var(--text);
    box-shadow: var(--shadow);
    transition: all var(--transition-normal);
    position: relative;
    overflow: hidden;
  }

  .diary-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(120deg, color-mix(in srgb, var(--primary) 28%, transparent), transparent 55%);
    opacity: 0;
    transition: opacity var(--transition-normal);
  }

  .diary-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-hover);
    border-color: var(--primary);
  }

  .diary-card:hover::before {
    opacity: 1;
  }

  .card-header {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-sm);
    position: relative;
    z-index: 1;
  }

  .mood-icon {
    font-size: 1.6rem;
  }

  .date {
    font-size: 0.85rem;
    color: var(--text-muted);
    letter-spacing: 0.04em;
  }

  .card-title {
    font-size: 1.4rem;
    font-weight: 700;
    margin-bottom: var(--spacing-xs);
    line-height: 1.3;
    font-family: var(--font-display);
  }

  .card-excerpt {
    font-size: 0.95rem;
    color: var(--text-muted);
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
